{
  "name": "node-buffs",
  "version": "0.8.19",
  "description": "",
  "keywords": [],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Daniel Wei <danielwii0326@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielwii/node-buffs"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "rename": "find dist -depth -name \"*.js\" -exec sh -c 'mv \"$1\" \"${1%.js}.mjs\"' _ \\{\\} \\; && find dist -depth -name \"*.js.map\" -exec sh -c 'mv \"$1\" \"${1%.js.map}.mjs.map\"' _ \\{\\} \\;",
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "clean": "rimraf dist",
    "build": "yarn clean && tsc --emitDeclarationOnly --declarationDir dist && swc src -d dist -C module.type=es6 && yarn rename && swc src -d dist -C module.type=commonjs -s",
    "build:legacy": "yarn clean && tsc --module commonjs && rollup -c rollup.config.ts",
    "doc": "typedoc --out docs --theme minimal src",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "prepack": "yarn build"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "collectCoverage": true
  },
  "peerDependencies": {
    "lodash": ">=4.17.0"
  },
  "resolutions": {
    "fsevents": "^2"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "fs-extra": "^10.0.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@swc/cli": "^0",
    "@swc/core": "^1",
    "@types/eslint": "^8",
    "@types/fs-extra": "^9",
    "@types/jest": "^27",
    "@types/js-yaml": "^4",
    "@types/lodash": "^4",
    "@types/node": "^16",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "colors": "^1.4.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.11.0",
    "eslint-config-alloy": "^4.5.1",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lodash": "^4.17.21",
    "prettier": "^2.6.0",
    "pretty-quick": "^3.1.3",
    "prompt": "^1.2.2",
    "replace-in-file": "^6.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.2"
  },
  "packageManager": "yarn@3.2.0"
}
