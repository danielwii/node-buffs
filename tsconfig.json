{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES5",
    "module": "ES2015",
    "lib": ["ES2015", "ES2016", "ES2017"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib"
  },
  "include": ["src/**/*.*"],
  "exclude": ["**/node_modules/*", "**/*.spec.ts"]
}
